<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.back.mapper.NoticeMapper">

    <!-- 공지사항 추가 -->
    <insert id="createNotice">
        <if test="Pri.Role.name() == 'ADMIN'">
        INSERT INTO notice (reg_time, update_time, notice_contents, notice_title, status)
        VALUES (now(), now(), #{Not.noticeContents}, #{Not.noticeTitle}, "Y");
        </if>
    </insert>

    <!-- 공지사항 목록 조회 -->
    <select id="selectNoticeList" resultType="HashMap">
        SELECT notice_title, reg_time
        FROM notice
    </select>

    <!-- 공지사항 상세 조회 -->
    <select id="selectNoticeDetail" resultType="HashMap" parameterType="Long">
        SELECT *
        FROM notice
        WHERE notice_id = #{id}
    </select>

    <!-- 공지사항 수정 -->
    <update id="updateNotice" parameterType="NoticeDto">
        <if test="Pri.Role.name() == 'ADMIN'">
        UPDATE notice
           SET notice_contents = #{Not.noticeContents},
               notice_title = #{Not.noticeTitle},
               update_time = now()
         WHERE notice_id = #{Not.id}
        </if>
    </update>

    <!-- 공지사항 삭제 -->
    <delete id="deleteNotice">
        <if test="Pri.Role.name() == 'ADMIN'">
        DELETE FROM notice
        WHERE notice_id = #{id};
        </if>
    </delete>
</mapper>